<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_dashboard"
    app:startDestination="@id/dashboard">

    <fragment
        android:id="@+id/dashboard"
        android:name="com.kh69.passmath.questions.presentation.DashboardFragment"
        android:label="DashboardFragment"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_questionListFragment"
            app:destination="@id/list" />
    </fragment>

    <fragment
        android:id="@+id/list"
        android:name="com.kh69.passmath.questionlist.presentation.QuestionListFragment"
        android:label="QuestionListFragment"
        tools:layout="@layout/fragment_question_list" />

    <fragment
        android:id="@+id/settings"
        android:name="com.kh69.passmath.questions.presentation.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings" />
</navigation>